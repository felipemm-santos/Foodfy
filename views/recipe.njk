{% extends "layout.njk" %}

{% block styles %}
  <link rel="stylesheet" href="/styles/recipe.css"/>
{% endblock styles %}

{% block linkLogo %}
  <a href="/">
    <img src="/assets/logo.png" alt="Logo"/>
  </a>
{% endblock linkLogo %}

{% block linksMenu %}
  <a href="/about">
    Sobre
  </a>

  <a class="current" href="/recipes">
    Receitas
  </a>
{% endblock linksMenu %}

{% block content %}
  <main id="recipe">

    <img src="{{recipe.image}}" alt="{{recipe.title}}">

    <h1>{{recipe.title}}</h1>
    <h3>
      por
      {{recipe.author}}
    </h3>

    <section class="ingredients">
      
      <h2>Ingredientes</h2>

      <ul>
        {% for ingredient in recipe.ingredients %}
          <li>{{ingredient}}</li>
        {% endfor %}
      </ul>
    </section>

    <section class="preparation">
      <h2>Modo de preparação</h2>
      <ul>
        {% for step in recipe.preparation %}
          <li>{{step}}</li>
        {% endfor %}
      </ul>
    </section>

    <section class="information">

      <h2>Informações adicionais</h2>

      <p>{{recipe.information}}</p>
    </section>

  </main>
{% endblock content %}