{% extends "layout.njk" %}

{% block styles %}
  <link rel="stylesheet" href="/styles/home.css"/>

  <link rel="stylesheet" href="/styles/recipes.css"/>
{% endblock styles %}

{% block linkLogo %}
  <a class="current" href="#">
    <img src="/assets/logo.png" alt="Home"/>
  </a>
{% endblock linkLogo %}

{% block linksMenu %}
  <a href="/about">
    Sobre
  </a>

  <a href="/recipes">
    Receitas
  </a>
{% endblock linksMenu %}

{% block content %}
  <main id="page-home">
    <div class="painel">
      <div>
        <h1>
          As melhores receitas
        </h1>
        <p>
          Aprenda a construir os melhores pratos com receitas criadas por profissionais
        </p>
      </div>

      <div class="image-container">
        <img src="assets/chef.png" alt="chef"/>
      </div>
    </div>

    <h2>Mais acessadas</h2>
    <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <img src="{{recipe.image}}" alt="{{recipe.title}}"/>
          <h3>{{recipe.title}}</h3>
          <p>por
            {{recipe.author}}</p>
        </div>
      {% endfor %}
    </div>

  </main>
{% endblock content %}

{% block scripts %}
  <script src="/scripts/script.js"></script>
{% endblock scripts %}